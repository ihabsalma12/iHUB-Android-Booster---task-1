<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/fishes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_fish"
        android:text="Fishes"
        android:textColor="@color/purple_700"
        android:textSize="36dp"
        android:textStyle="bold"
        app:drawableTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/fishes_img"
        app:layout_constraintStart_toStartOf="@+id/fishes_img" />

    <Button
        android:id="@+id/chg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Change Text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/fishes_img"
        app:layout_constraintTop_toBottomOf="@+id/fishes_img" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Change Image"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/fishes_img"
        app:layout_constraintTop_toBottomOf="@+id/chg_text" />



    <ImageView
        android:id="@+id/fishes_img"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fishes" />

</androidx.constraintlayout.widget.ConstraintLayout>